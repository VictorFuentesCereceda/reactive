{% extends 'AppBundle::base.html.twig' %}
{% block title %}Login{% endblock %}
{% block css %}
    <link href="{{  asset('bundles/app/css/body.css')}}" rel="stylesheet" />
{% endblock %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container center-div">
        <div class="row">

            <div  class="col-md-4 col-md-offset-4 content-login">
                <form  action="{{ path('login_check') }}" method="post">
                    <div class="card-header img-logo-login">
                        <div class="brand-logo">
                            <div id="logo">
                                <img src="{{  asset('bundles/app/img/reactive.png') }}" class="img-rounded center-block" style="width: 100px">
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="form-group">
                            <label class="control-label">Correo</label>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" autofocus autocomplete="off" />
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="form-group">
                            <label class="control-label">Password</label>
                            <input type="password" class="form-control" id="password" name="_password" />
                        </div>
                    </div>
                    {% if error %}
                        <div class="bs-component">
                            <div class="alert alert-dismissible alert-danger">
                                Credenciales incorrectas.
                            </div>
                        </div>
                    {% endif %}

                    <div class="card-action clearfix">
                            <button id="login_" type="submit" class="btn btn-success pull-right">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

